<div class="data-form">
    <form action="/courses/create" method="POST">
        <h2>Create a new course:</h2>
        <div>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="Title" autofocus>
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" name="description" id="description" placeholder="Description" autofocus>
        </div>
        <div>
            <label for="maxStudents">Max students</label>
            <input type="number" name="maxStudents" id="maxStudents" placeholder="Max students" required>
        </div>
        <div>
            <label for="cost">Cost</label>
            <input type="number" name="cost" id="cost" placeholder="Cost" required>
        </div>
        <div>
            <button type="submit">Create</button>
        </div>
    </form>
</div>