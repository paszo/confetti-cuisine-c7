<div class="data-form">
    <form action="/users/create" method="POST">
        <h2>Create a new user:</h2>
        <div>
            <label for="firstName">First name</label>
            <input type="text" name="firstName" id="firstName" placeholder="First name" autofocus>
        </div>
        <div>
            <label for="lastName">Last name</label>
            <input type="text" name="lastName" id="lastName" placeholder="Last name" autofocus>
        </div>
        <div>
            <label for="inputEmail">Email address</label>
            <input type="email" name="email" id="inputEmail" placeholder="Email address">
        </div>
        <div>
            <label for="inputZipCode">Zip Code</label>
            <input type="text" name="zipCode" id="inputZipCode"
                pattern="[0-9]{5}" placeholder="Zip Code">
        </div>
        <div>
            <label for="password">Password</label>
            <input type="password" name="password" id="password"  placeholder="password">
        </div>
        <div>
            <button type="submit">Create</button>
        </div>
    </form>
</div>